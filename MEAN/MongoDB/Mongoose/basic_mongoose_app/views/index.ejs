<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title></title>
    </head>

    <body>
        <% if(typeof(errors) != 'undefined' ) { %>
            <% for (var x in errors) { %>
                <h3><%= errors[x].message %></h3>
            <% } %>
        <% } %>
        <form action="/users" method="post">
            <p>Name:
                <input type="text" name="name"></p>
            <p>Age:
                <input type="text" name="age"></p>
            <input type="submit">
        </form>
        <% for(let i = 0; i< users.length; i++) {%>
            <p>
                <%= users[i].name %>
            </p>
            <p>
                <%= users[i].age %>
            </p>
            <hr/>
        <% } %>
    </body>

</html>
